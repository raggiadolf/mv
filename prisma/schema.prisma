generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Participant {
  id                 Int             @id @default(autoincrement())
  race_id            Int
  user_id            String
  jerseys            Jersey[]
  strava_activity_id BigInt?
  jersey_set_at      DateTime?
  Race               Race            @relation(fields: [race_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User               User            @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  segment_efforts    SegmentEffort[]

  @@unique([race_id, user_id])
}

model Race {
  id                Int           @id @default(autoincrement())
  date              DateTime      @db.Timestamptz(6)
  scheduled_race_id Int
  Participant       Participant[]
  ScheduledRace     ScheduledRace @relation(fields: [scheduled_race_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  updated_at        DateTime      @default(now())
}

model Session {
  id        String   @id
  userId    String?
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model User {
  id                      String        @id
  strava_id               Int           @unique
  strava_refresh_token    String
  strava_access_token     String
  access_token_expires_at DateTime
  username                String?
  firstname               String?
  lastname                String?
  profile                 String?
  role                    Role          @default(USER)
  eligible_for_old        Boolean       @default(true)
  created_at              DateTime      @default(now())
  deleted_at              DateTime?
  sex                     Sex           @default(M)
  weight                  Float?
  Participant             Participant[]
  Session                 Session[]
}

model SegmentEffort {
  id                      Int          @id @default(autoincrement())
  strava_segment_id       BigInt
  elapsed_time_in_seconds Int
  start_date              DateTime
  end_date                DateTime
  is_kom                  Boolean
  kom_rank                Int?
  average_watts           Float
  distance_in_meters      Float
  participantId           Int?
  race_segment_id         Int?
  Participant             Participant? @relation(fields: [participantId], references: [id])
  RaceSegment             RaceSegment? @relation(fields: [race_segment_id], references: [id])

  @@unique([participantId, race_segment_id])
}

model RaceSegment {
  id                Int             @id @default(autoincrement())
  strava_segment_id BigInt
  name              String?
  jersey            Jersey
  scheduledRaceId   Int?
  ScheduledRace     ScheduledRace?  @relation(fields: [scheduledRaceId], references: [id])
  SegmentEffort     SegmentEffort[]
}

model ScheduledRace {
  id           Int           @id @default(autoincrement())
  race_type    RaceType
  weekday      Int
  start_hour   Int
  start_minute Int
  title        String?
  Race         Race[]
  RaceSegment  RaceSegment[]
}

enum Jersey {
  YELLOW
  OLD
  PINK
  POLKA
  GREEN
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

enum RaceType {
  RACE
  GROUPRIDE
}

enum Sex {
  M
  F
}
